#include "FirebaseESP8266.h"
#include <ESP8266WiFi.h>

#define FIREBASE_HOST "hetaste-laget-s3-default-rtdb.europe-west1.firebasedatabase.app/"
#define FIREBASE_AUTH "kfoiZKkExqC7Sj8MmrU01FVXLhCm7nIDkd17dohO"
#define WIFI_SSID "ABB_Indgym_Guest"
#define WIFI_PASSWORD "Welcome2abb"
//https://github.com/mobizt/Firebase-ESP8266
//Define Firebase Data objects
FirebaseData firebaseData1;
FirebaseData firebaseData2;
FirebaseData firebaseData3;
FirebaseData firebaseData4;

#include <Wire.h>
#include <AM2320.h>

AM2320 sensor;

float SensorTemp;
float SensorHum;
float temp = SensorTemp;
float hum = SensorHum;

String mainpath = "/Victors Sensor";
String path = "Temperature"; //This is this node ID to receive control
String path2 = "Humidity";
String subpath1 = "Current_Temp";
String subpath2 = "Current_Hum";

void setup(){
  Serial.begin(9600);
  Wire.begin(14, 12);
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to Wi-Fi");
  while (WiFi.status() != WL_CONNECTED){
    Serial.print(".");
    delay(300);
  }
  Serial.println();
  Serial.print("Connected with IP: ");
  Serial.println(WiFi.localIP());
  Serial.println();
  Firebase.begin(FIREBASE_HOST, FIREBASE_AUTH);
  Firebase.reconnectWiFi(true);
}

void getTempHum() {
  if (sensor.measure()){
    SensorTemp = sensor.getTemperature();
    Serial.print("Temperature: ");
    Serial.println(SensorTemp);

    SensorHum = sensor.getHumidity();
    Serial.print("Humidity: ");
    Serial.println(SensorHum);
  }

  else {
    int errorCode = sensor.getErrorCode();
    switch (errorCode) {
    case 1: Serial.println("ERR: Sensor is offline"); break;
    case 2: Serial.println("ERR: CRC validation failed."); break;
    }
  }
}

void loop(){
  getTempHum();
   hum = SensorHum;
  temp = SensorTemp;
  if (Firebase.setInt(firebaseData2, mainpath + "/" + path + "/" + subpath1, temp)){
    Serial.println("Set " + subpath1 + " to "+String(temp));
  }
  else {
    Serial.println("Could not set " + subpath1);
  }
  if (Firebase.pushInt(firebaseData1, mainpath + "/" + path + "/Log" , temp)){
    Serial.println("Temperature logged");
  }
  else{
    Serial.println("Could not add temperarture to logger");
  }
  if (Firebase.setInt(firebaseData4, mainpath + "/" + path2 + "/" + subpath2, hum)){
    Serial.println("Set " + subpath2 + " to "+String(hum));
  }
  else {
    Serial.println("Could not set " + subpath2);
  }
  if (Firebase.pushInt(firebaseData3, mainpath + "/" + path2 + "/Log" , hum)){
    Serial.println("Humidity logged");
  }
  else{
    Serial.println("Could not add humidity to logger");
  }
  
  delay(1000);
}
